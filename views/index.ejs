<!DOCTYPE html>
<html>
<head>
	<title></title>
	<script src="jquery/dist/jquery.js"></script>
	<script src="javascripts/main.js"></script>
	<link rel="stylesheet" type="text/css" href="semantic-ui/dist/semantic.min.css">
	<script src="semantic-ui/dist/semantic.min.js"></script>
	<link rel="stylesheet" href="stylesheets/style.css">
	<link rel="stylesheet" href="stylesheets/icons.css">
	
	
</head>
<body>
	<div class="container1">
		<div class="menu">
			<!-- <h1>Welcome</h1> -->
			<select class="ui fluid dropdown" id="select-locations">
			<% locations.forEach(function(location){ %>
				<option value="<%= location.id %>" <%= randoId === location.id ? 'selected' : '' %>><%= location.name%></option>
			<%})%>
			</select>
			<button class="ui blue basic button" id="entry" type="button">Submit</button>
		</div>
		<div class="contentSplash">
			<div class="ajax1">
				<h3>Wave Height</h3>
				<h2><%= results[0].swell.minBreakingHeight %>-<%= results[0].swell.maxBreakingHeight %>ft</h2>
				<h3>Local Weather</h3> 
				<div class="msw-sw msw-sw-<%= results[0].condition.weather %>"></div>
				<h3>Local Swell Direction</h3>
				<h4><%= results[0].swell.components.combined.direction %>&deg</h4>
				<div class="msw-swa msw-swa-<%= swellDirection %>"></div>
				<h3>Local Wind Direction</h3>
				<h4><%= results[0].wind.compassDirection %></h4>
				<div class="msw-ssa msq-ssa-<%= results[0].wind.direction %>"></div>
				<div class="logo">
					<a href="http://magicseaweed.com" target="_blank"><img src="http://im-1-uk.msw.ms/msw_powered_by.png"></a>
				</div>
			</div>
		</div>
		<div class="side">
			<div id="pic" class="ui small images photos ">
				<% locations.forEach(function(location){ %>
					<img height="300px" width="300px" src="<%= location.img %>">
				<%})%>
			</div>
		</div>
	</div>
</body>
</html>